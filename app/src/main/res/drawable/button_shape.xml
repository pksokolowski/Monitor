<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#9b9b9b" />
            <gradient android:angle="-90" android:startColor="#a4a4a4" android:endColor="#c7c7c7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#868686" />
            <solid android:color="#cccccc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#a9a9a9" />
            <gradient android:angle="-90" android:startColor="#d6d6d6" android:endColor="#ededed"  />
        </shape>
    </item>
</selector>